{
  "compilerOptions": {
    "checkJs": true,
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["es2023"],
    "module": "node16",
    "newLine": "lf",
    "strict": true,
    "target": "es2023"
  },
  "exclude": [
    "coverage/",
    "node_modules/",
    "example/index.module.js",
    "example/index.nomodule.js"
  ],
  "include": ["**/**.js", "**/**.jsx"]
}
