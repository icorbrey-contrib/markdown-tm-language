{
  "private": true,
  "name": "markdown-tm-language",
  "version": "0.0.0",
  "description": "really good syntax highlighting for markdown and MDX",
  "license": "MIT",
  "keywords": [],
  "repository": "wooorm/markdown-tm-language",
  "bugs": "https://github.com/wooorm/markdown-tm-language/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "files": [
    "text.md.js",
    "text.md.tmLanguage",
    "source.mdx.js",
    "source.mdx.tmLanguage"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/plist": "^3.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/regexgen": "^1.0.0",
    "@wooorm/starry-night": "^3.0.0",
    "character-entities": "^2.0.0",
    "character-entities-legacy": "^3.0.0",
    "esbuild": "^0.19.0",
    "escape-string-regexp": "^5.0.0",
    "gemoji": "^8.0.0",
    "gzip-size": "^7.0.0",
    "hast-util-to-jsx-runtime": "^2.0.0",
    "micromark-util-html-tag-name": "^2.0.0",
    "plist": "^3.0.0",
    "prettier": "^3.0.0",
    "pretty-bytes": "^6.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "regexgen": "^1.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "undici": "^5.0.0",
    "vscode-tmgrammar-test": "^0.1.0",
    "xo": "^0.56.0",
    "yaml": "^2.0.0"
  },
  "scripts": {
    "prepack": "npm run generate && npm run build && npm run format",
    "generate:example": "esbuild example/index.jsx --bundle --minify --target=es6 --outfile=example/index.nomodule.js && esbuild example/index.jsx --bundle --minify --target=es2020 --format=esm --outfile=example/index.module.js",
    "generate": "node --conditions development build.js",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --log-level warn && xo --fix",
    "#": "Do `npm run test-api -- --updateSnapshot` to update snapshots",
    "test-api": "vscode-tmgrammar-snap -s text.md -g text.md.tmLanguage -g test/source.toml.json -g test/source.yaml.json test/**/*.md",
    "test": "npm run generate && npm run generate:example && npm run build && npm run format && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "n/file-extension-in-import": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      [
        "remark-lint-no-html",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  }
}
